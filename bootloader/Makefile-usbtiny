include Makefile.common
LDFLAGS += $(LDFLAGS_BOOTLOADER)

DUSBVERSION     = -DUSBTINY
USBTINY         = ./usbtiny
TARGET_ARCH     = -DF_CPU=12000000 -DAVR $(DUSBVERSION) -mmcu=atmega8
#OBJECTS         = biostable.o main.o
CABLE           = stk200
#CABLE           = usbasp
AVRDUDE         = avrdude
#AVRDUDE         = sudo /usr/local/avr/bin/avrdude
FLASH           = $(AVRDUDE) -c $(CABLE) -p atmega8 -U lfuse:w:0x9f:m -U hfuse:w:0xc8:m -U flash:w:bootldr-usbtiny.hex
STACK           = 32
FLASHSIZE       = 8192
RAMSIZE         = 1024

.INTERMEDIATE: crc.o int.o usb.o bootldr-usbtiny.bin $(OBJECTS)

include $(USBTINY)/common.mk
